<div class="row">
    <div class="col-md-12">
        <div class="row thumbnail nomargin">
            <div class="col-sm-4 game-main text-center">
                <img class="game-image" src="{{image}}" alt="">
                <div class="caption">
                    <h3>{{title}}</h3>
                    <p class="item-platform">{{platform}}</p>
                    <p class="item-price">
                        ${{price}}
                    </p>
                    <p>
                        <a class="btn btn-primary" id="btn-add-to-cart">Add to Cart</a>
                    </p>
                </div>
            </div>
            <div class="col-sm-8">
                <h4>Description</h4>
                <p>{{description}}</p>
            </div>
        </div>
    </div>
</div>