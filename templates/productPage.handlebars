<div class="col-md-12">
    <div class="row thumbnail nomargin">
        <div class="col-sm-4 game-main text-center">
            <img src="{{imgURL}}" alt="empty">
            <div class="caption">
                <h3>{{title}}</h3>
                <p class="item-platform">{{type}}</p>
                <p class="itemPrice">
                    {{price}}
                </p>
                <p>
                    <a href="#" class="btn btn-primary">Add to Cart</a> <a href="#" class="btn btn-default">Details</a>
                </p>
            </div>
        </div>
        <div class="col-sm-8">
            <h4>Description</h4>
            <p>{{description}}</p>
            <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="recommend" data-show-faces="true" data-share="true"></div>
        </div>
    </div>
</div>
